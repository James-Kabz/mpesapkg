{
    "name": "james-kabz/mpesapkg",
    "description": "Laravel package for integrating Safaricom M-Pesa APIs",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "James Kabz",
            "email": "kabogp@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "illuminate/config": "^10.0|^11.0|^12.0",
        "phpunit/phpunit": "^10.5|^11.0"
    },
    "autoload": {
        "psr-4": {
            "JamesKabz\\MpesaPkg\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JamesKabz\\MpesaPkg\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "JamesKabz\\MpesaPkg\\Providers\\MpesaServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
